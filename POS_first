class menu:
    def __init__(self, name, price, ingredients):
        self.name=name
        self.price=price
        self.ingredients=ingredients
    
    
items = {
    1: menu('hamburger', 3.00, {'sesame bun': 0, 'lettuce': 0.5, 'tomato':0.5, 'cheese':0.79, 'onions':0.5}),
    2: menu('fries', 1.00, {'extra salt': 0, 'no salt': 0}),
    3: menu('sprite', 2.00, {'extra ice': 0, 'no ice': 0, 'light ice': 0})
}


def startorder():
    print("please select products:\n")
    for i, item in items.items():
        print(f'{i}. {item.name} ${item.price:.2f}')

def fullorder():
    order=[]
    keep_ordering=True
  
    while keep_ordering == True:
        a=int(input("1-3\n"))
        index=a
        if a>len(items) or index<0:
            print("Item not found\n Please select a valid item.")
            continue
        
        else:
            order.append(items[index])
            print(items[index].name,"---",items[index].price)

        print("Ordder more? (y/n)")
        answer=input()
        if answer=="y":
            keep_ordering=True
        elif answer=="n":
            keep_ordering=False
        else:
            print("Invalid input. Please enter 'y' or 'n'.")
            keep_ordering=True
    
    return order

def receipt(order):
    total = 0
    for item in order:
        total += item.price
        print(item.name,"---",item.price)
    print("Your total is: $", total)
    return total

def payment(total):
    payment=int(input("Enter payment amount:\n"))
    if payment<total:
        print("insufficient payment!")

    elif payment==total:
        print("Payment successful! Thank you for your purchase.")

def add_ingredients(item):
    pass


startorder()
order = fullorder()
total = receipt(order)
payment(total)